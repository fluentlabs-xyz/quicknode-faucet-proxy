generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Claim {
  id             Int      @id @default(autoincrement())
  embeddedWallet String   @db.VarChar(64)
  externalWallet String   @db.VarChar(64)
  visitorId      String   @db.VarChar(64)
  ip             String   @db.VarChar(64)
  txId           String  @db.VarChar(128)
  amount         Float?   @default(0)
  createdAt      DateTime @default(now())

  @@index([embeddedWallet, createdAt])
  @@index([externalWallet, createdAt])
  @@index([visitorId, createdAt])
  @@index([ip, createdAt])
}
